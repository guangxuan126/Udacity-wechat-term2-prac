/* pages/detail/detail.wxss */
.productCard{
  position: relative;
  width: 100%;
  height: 600rpx;
  background: #fff;
  flex: 1;
}
.procuctImg{
  display: block; 
  margin: 0 auto; 
  width: 370rpx;
  height: 370rpx;
}
.procuctName{
  margin: 42rpx 49rpx 0;
  font-size: 38rpx;
  line-height: 53rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}
.productSource{
  margin: 5rpx 49rpx 0;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8B8B8B;
}
.productMoney{
  position: absolute;
  bottom: 10rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
}
.price{
  margin-left: 20rpx;
}
.money{
  background: #F7E687;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  font-weight: bold;
  line-height: 36rpx;
  font-size: 30rpx;
}

.reviewCard{
  position: relative;
  height: 400rpx;
  margin: 30rpx 40rpx 60rpx;
  background-color: #fff;
  border-radius: 13rpx;
  box-shadow: 1rpx 1rpx 50rpx 5rpx #eaeaea;
}
.serviceBox{
  position: relative;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1)
}
.service{
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.checkText{
  font-size: 28rpx;
  margin-left: 15rpx;
}

.reviewBox{
  position: relative;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
}
.reviewTitle{
  display: flex;
  padding-left: 20rpx;
}
.title{
  font-size: 35rpx;
  font-weight: 600;
}
.count{
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.countText{
  margin-right: 10rpx;
}
.reviewDeatail{
  padding-top: 40rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.check{
  width: 22rpx;
  height: 16rpx;
}
.countArrow{
  width: 11rpx;
  height: 18rpx;
}

.btnArea{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
}
.btnTrolley,
.btnBuy{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}
.btnTrolley{
  background-color:  rgba(245, 224, 105, 0.6);
}
.btnBuy{
  background-color:  #F5E069;
}