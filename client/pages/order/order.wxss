/* pages/order/order.wxss */
.emptyBox{
  background: #fff;
  border-radius: 13rpx;
  box-shadow: 1rpx 1rpx 50rpx 5rpx #eaeaea;
  margin: 60rpx 30rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.emptyTitleImg{
  margin-bottom: 29rpx;
  height: 90rpx;
  width: 90rpx;
  opacity: 0.4;
}
.emptyTitleText{
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}
.orderHead{
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  align-items: center;
}
.orderHeadLine{
  width: 21rpx;
  height: 34rpx;
}
.orderHeadText{
  font-size: 30rpx;
  margin-left: 15rpx;
  font-weight: bold;
  color: rgba(52, 55, 61, 0.8);
}
.orderFrame{
  background: #fff;
  border-radius: 13rpx;
  box-shadow: 1rpx 1rpx 50rpx 5rpx #eaeaea;
  margin: 10rpx 30rpx 30rpx;
}
.orderCard{
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
}
.orderCard:last-child{
  border-bottom: none;
}
.orderImg{
  width: 160rpx;
  height: 160rpx;
}
.orderInfo1{
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.orderName{
  color: rgba(29, 29, 38, 0.8);
}
.orderPrice{
  margin-top: 15rpx;
  font-weight: bold;
}
.orderInfo2{
  flex-shrink: 0;
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-top: 40rpx;
}
.orderComment{
  background: #F5E069;
  width: 100rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  border-radius: 8rpx;
}
.orderCount{
  text-align: right;
  font-weight: bold;
  line-height: 40rpx;
  margin-top: 50rpx;
}